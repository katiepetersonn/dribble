<h1>Login</h1>

<div class="container">
  <div class="row">
    <div class="col s12 #ffffff white">
      <% if flash[:login_error] %>
        <p>
          <%= flash[:login_error] %>
        </p>
      <% end %>

      <%= form_tag "/login" do %>
        <p>
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </p>
        <p>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </p>

        <button class="btn waves-effect waves-light #f06292 pink lighten-2" type="submit" name="action">Submit</button>
      <% end %>
    </div>
  </div>
</div>

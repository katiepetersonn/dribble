<h1>All Projects</h1>

<% @all_projects.each do |project| %>

<div class="row">
    <div class="col s12 m6 xl4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="<%= project.image %>" >
        </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"> <%= project.title %> </span>
            <p>Project: <%= link_to(project.title, "/projects/#{project.id}", class: "a-links")%></p>
            <p>Designer: <a class = "a-links" href="/users/<%= project.user.id %>"> <%= project.user.name %></a></a></p>
          </div>

        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= project.title %><i class="material-icons right">close</i></span>
          <p><%= project.description %></p>
      </div>
    </div>
  </div>

  <% end %>
</div>
